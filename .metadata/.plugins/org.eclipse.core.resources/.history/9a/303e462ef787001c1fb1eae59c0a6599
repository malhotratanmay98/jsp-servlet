<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  
  <!-- We have used wildcards in filters so that single filter can be applied to multiple servlets -->
  
  <display-name>app7filters</display-name>
  
  <servlet>
    <description></description>
    <display-name>S1</display-name>
    <servlet-name>S1</servlet-name>
    <servlet-class>com.demo.S1</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>S1</servlet-name>
    <url-pattern>/S1</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <description></description>
    <display-name>S2</display-name>
    <servlet-name>S2</servlet-name>
    <servlet-class>com.demo.S2</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>S2</servlet-name>
    <url-pattern>/S2</url-pattern>
  </servlet-mapping>
  <session-config>
    <session-timeout>1</session-timeout>
  </session-config>
  
  <!-- .do is wildcard , it means all the servlets with .do will have same filter -->
  <servlet>
    <servlet-name>S3</servlet-name>
    <servlet-class>com.demo.S3</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>S3</servlet-name>
    <url-pattern>/S3.do</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
    <servlet-name>S4</servlet-name>
    <servlet-class>com.demo.S4</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>S4</servlet-name>
    <url-pattern>/S4.do</url-pattern>
  </servlet-mapping>
  
  
  <filter>
    <filter-name>F2</filter-name>
    <filter-class>com.demo.F2</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>F2</filter-name>
    <url-pattern>*.do</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>
  
  <filter>
    <display-name>F1</display-name>
    <filter-name>F1</filter-name>
    <filter-class>com.demo.F1</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>F1</filter-name>
    <url-pattern>*.do</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
    <dispatcher>INCLUDE</dispatcher>
    <dispatcher>ERROR</dispatcher>
  </filter-mapping>
 
 
 <servlet>
    <servlet-name>S5</servlet-name>
    <servlet-class>com.demo.S5</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>S5</servlet-name>
    <url-pattern>/S5.do</url-pattern>
  </servlet-mapping>
  
  <filter>
    <display-name>F4</display-name>
    <filter-name>F4</filter-name>
    <filter-class>com.demo.F4</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>F4</filter-name>
     <url-pattern>*.do</url-pattern>
  </filter-mapping>
</web-app>